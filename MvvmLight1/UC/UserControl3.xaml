<UserControl x:Class="MvvmLight1.UC.UserControl3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmLight1.UC"
             mc:Ignorable="d" Height="107.812" Width="498.75">
    <UserControl.DataContext>
        <Binding Path="UC3" Source="{StaticResource Locator}"/>
    </UserControl.DataContext>


    <Grid >
        <TextBlock FontSize="36"
                   FontWeight="Bold"
                   Foreground="Purple"
                   Text="{Binding WelcomeTitle}"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" Background="{DynamicResource Brush_vert}" Margin="10,0,9.75,9.812" Width="479" Height="88" />

    </Grid>
</UserControl>
